model StudentDetail {
  id            Int        @id @default(autoincrement())
  studentId     Int        @unique  // Ensure only one detail per student
  student       Student    @relation(fields: [studentId], references: [id])
  age           Int?
  favoriteColor String?
  grade         String?
  skillLevel    String?
  ethnicity     String?
  background    String?
}
